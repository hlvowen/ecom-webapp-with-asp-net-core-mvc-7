@using tflame69.Models.dbo
@using System.Globalization
@model IEnumerable<tflame69.Models.dbo.Product>

<div class="row pb-3" >
    @foreach (Product product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="../../../@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                                    @product.Title
                                </p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            @{ 
                                var cultureInfo = CultureInfo.GetCultureInfo("en-US"); 
                            }
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-center mb-0">
                                    <span class="text-decoration-line-through">
                                        Price List : @product.PriceList.ToString("c", cultureInfo)
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-center">
                                    As low as @product.PriceForMoreThan100.ToString("c", cultureInfo)
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>